<div class="login-container">
  <div class="login-card">
    <h2>パスワードを忘れましたか？</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス", class: "login-letter"%><br />
        <%= f.email_field :email, autofocus: true , class: "input-field"%>
      </div>

      <div class="actions">
        <%= f.submit "パスワードリセットのリンクを送信", class: "login-btn" %>
      </div>
    <% end %>

    <%= link_to "ログインへ戻る", new_session_path(resource_name), class: "btn btn-link" %>
  </div>
</div>