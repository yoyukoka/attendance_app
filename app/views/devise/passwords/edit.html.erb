<div class="login-container">
  <div class="login-card">
    <h2>パスワード変更</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token, value: params[:reset_password_token] %>

      <div class="field">
        <%= f.label :password, "パスワード", class: "login-letter" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "input-field" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード確認", class: "login-letter" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field" %>
      </div>

      <div class="actions">
        <%= f.submit "パスワード更新", class: "login-btn" %>
      </div>
    <% end %>

    <%= link_to "ログインに戻る", new_session_path(resource_name), class: "btn btn-link" %>
  </div>
</div>