<div class="login-container">
  <div class="login-card">
    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, class: "login-letter" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field" %>
      </div>

      <div class="field">
        <%= f.label :password, class: "login-letter" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "input-field" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "login-letter" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン", class: "login-btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>