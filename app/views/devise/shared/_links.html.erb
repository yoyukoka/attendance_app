<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "サインアップ", new_registration_path(resource_name), class: "btn btn-link" %><br />
<% end %>
<% if devise_mapping.recoverable? && controller_name != 'passwords' %>
  <%= link_to "パスワードを忘れましたか？", new_password_path(resource_name), class: "btn btn-link" %><br />
<% end %>