<div class="login-container">
  <div class="login-card">
    <h2>サインアップ</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス", class: "login-letter" %>
        <%= f.email_field :email, autofocus: true, class: "input-field" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード", class: "login-letter" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "input-field" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード確認", class: "login-letter" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input-field" %>
      </div>

      <div class="actions">
        <%= f.submit "サインアップ", class: "login-btn" %>
      </div>

      <%= link_to "ログインへ戻る", new_session_path(resource_name), class: "btn btn-link" %>
    <% end %>
  </div>
</div>