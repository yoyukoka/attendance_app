<div class="title">
  <h1>ユーザー情報</h1>
  <div class="user-links">
    <%= link_to 'イベント一覧に戻る', events_path, class: 'btn btn-secondary' %>
  </div>
</div>

<div class="profile-container">
  <div class="profile-info">
    <p><span class="label">名前</span> <span class="value"><%= @user.name %></span></p>
    <p><span class="label">ポジション</span> <span class="value"><%= @user.position %></span></p>
    <p><span class="label">メール</span> <span class="value"><%= @user.email %></span></p>
    <% if @user.is_admin %>
      <p><span class="label">役職</span> <span class="value">幹部</span></p>
    <% end %>
  </div>
</div>

<% if current_user == @user %>
  <%= link_to 'ユーザー情報を編集', edit_user_registration_path, class: 'btn btn-primary event-btn' %>
<% end %>
